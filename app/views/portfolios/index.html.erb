<h1>Portfolio Items</h1>
<%= link_to "Create New Portfolio", new_portfolio_path %>
<% @portfolios.each do |portfolio| %>
  <p><%= portfolio.title %></p>
  <p><%= portfolio.body %></p>
  <%= image_tag portfolio.thumb_image if portfolio.thumb_image.present? %>
  <%= link_to "Edit", edit_portfolio_path(portfolio.id) %>
<% end %>